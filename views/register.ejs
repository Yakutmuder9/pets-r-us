<head>
  <meta charset="UTF-8" />

  <link rel="stylesheet" href="/styles/site.css" />

  <!-- Google fonts for Oswald -->
  <link
    href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&display=swap"
    rel="stylesheet"
  />
  <script
    src="https://kit.fontawesome.com/7e85f88570.js"
    crossorigin="anonymous"
  ></script>
</head>

<div class="landing" id="register">
  <%- include('./partials/_header.ejs') %>

  <main>
    <div class="first-main" id="boarding-first-main">
      <div class="container">
        <div class="boarding-first-main-box"></div>
        <div class="boarding-main-txt" id="booking-scroll-btn">
          <h1>
            Welcome to our <br />
            Booking menu!
          </h1>

          <p>
            Yo have not registered yet. Scroll down and make a registeration
          </p>
        </div>
        <img src="../images/B1.png" />
      </div>
    </div>

    <div class="sixth-main" id="second-bording-main">
      <div class="container">
        <div class="package-box-txt">
          <h1>Customer Registeration</h1>
        </div>

        <div class="testimonial-card-conta">
          <div class="testimonial-card">
            <!-- Customer Registraton Form -->
            <form id="register-form">
              <div class="email-contnet">
                <label for="customerId"
                  >Customer ID:
                  <input
                    type="text"
                    id="customerId"
                    name="customerId"
                    class="email-input"
                    required
                  />
                </label>
              </div>

              <div class="email-contnet">
                <label for="email"
                  >Email:
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="email-input"
                    required
                  />
                </label>
                <button type="submit" id="register-button" class="contact-btn">
                  Register
                </button>
              </div>
            </form>

            <!-- message div -->
            <div id="message"></div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('./partials/_footer.ejs') %>

  <script>
    // add event listener to register form submit button
    const registerForm = document.querySelector("#register-form");
    registerForm.addEventListener("submit", async (event) => {
      event.preventDefault();

      // get form data
      const customerId = document.querySelector("#customerId").value;
      const email = document.querySelector("#email").value;

      // send POST request to server with form data
      const response = await fetch("/register", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ customerId: customerId, email: email }),
      });

      // get response message and update message div
      const message = await response.text();
      const messageDiv = document.querySelector("#message");
      messageDiv.textContent = message;
    });
  </script>
</div>
